Prog -> Stmts .

Comment -> commnent 
| mcomment .

Type -> string
| numeric
| bool
| array
| Pin .

Stmts -> Stmt Stmts
| Comment Stmts
| FuncDecl Stmnts
| .
Stmt -> id ArrAccess is Assignment
| IfStmnt
| FuncCall
| WaitStmnt
| BeginStmt .

ArrAccess -> arrayindex Indexer ArrAccess
| .

Rp -> rp | .
Lp -> lp Lp| .

Indexer -> id
| numeric . 

Assignment -> Lp Val Expr
| FuncCall
| larr numeric rarr Arr .

Expr -> Math_Op Lp Val Expr Rp
| Bool_Op Lp Val Expr Rp
| .

Math_Op -> plus
| minus
| mult
| div
| mod .

Bool_Op -> equals
| and
| or
| greater OrEqual  
| less OrEqual .

OrEqual -> or equals
| .

Val -> id ArrAccess
| numeric
| minus numeric
| String
| Pin .

Arr -> larr numeric rarr Arr
| .

Pin -> dpin
| apin .

IfStmnt -> if Val Expr do Stmts ElseStmnt EndIf .
EndIf -> end if .
ElseStmnt -> else ElseIfStmnt Stmnts
| .

ElseIfStmnt -> if Val Expr do Stmnts ElseStmnt
| .

FuncCall -> call id CallParams .

FuncDecl -> func id DeclParams Stmts Return EndFunc .
EndFunc -> end id .

DeclParams -> with Val DeclParam .
DeclParam -> separator Val DeclParam
| .

Return -> return Val | .

BeginStmt -> begin Beginable .

Beginable -> LoopW
| LoopF .

LoopW -> while Val Expr do Stmts EndWhile .
EndWhile -> end while .

LoopF -> for id in Range do Stmts EndFor .
EndFor -> end for .

Range -> numeric rangeOp numeric .

WaitStmnt -> wait numeric TimeOperator .

TimeOperator -> h
| m
| s
| ms .

CallParams -> with Val CallParam .
CallParam -> separator Val CallParam
| .
