Prog -> Stmts .

Type -> string
| numeric
| bool
| array
| Pin .

Stmts -> Stmt Stmts
| FuncDecl Stmnts
| .
Stmt -> id ArrAccess is Assignment
| IfStmnt
| FuncCall
| WaitStmnt
| BeginStmt .

ArrAccess -> arrayindex Indexer ArrAccess
| .

Indexer -> id
| numeric . 

Assignment -> Val Expr
| FuncCall
| larr numeric rarr Arr .

Expr -> Math_Op Val Expr
| Bool_Op Val Expr
| .

Math_Op -> plus
| minus
| mult
| div
| mod .

Bool_Op -> equals
| and
| or
| greater OrEqual  
| less OrEqual .

OrEqual -> or equals
| .

Val -> id ArrAccess
| numeric
| minus numeric
| String
| Pin .

Arr -> larr numeric rarr Arr
| .

Pin -> dpin
| apin .

IfStmnt -> if Val Expr do Stmts ElseStmnt end if .

ElseStmnt -> else ElseIfStmnt Stmnts
| .

ElseIfStmnt -> if Val Expr do Stmnts ElseStmnt
| .

FuncCall -> call id CallParams .

FuncDecl -> func id CallParams Stmts Return end id .

Return -> return Val | .

BeginStmt -> begin Beginable .

Beginable -> LoopW
| LoopF .

LoopW -> while Val Expr do Stmts end while .

LoopF -> for id in Range do Stmts end for .

Range -> numeric rangeOp numeric .

WaitStmnt -> wait numeric TimeOperator .

TimeOperator -> h
| m
| s
| ms .

CallParams -> with id CallParam .
CallParam -> separator id CallParam
| .
